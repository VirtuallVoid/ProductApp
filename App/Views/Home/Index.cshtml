@model Tuple<IEnumerable<SelectListItem>, IEnumerable<SelectListItem>>

@{ ViewBag.Title = "Products App"; }

<div class="mx-2 mt-4 mb-2">
    <div class="row">
        <div class="col-md p-0">
            <h1 class="py-2 w-100 bg-dark text-light text-center rounded"><i class="fas fa-globe"></i> Products</h1>
            <hr>
            <div class="row text-right">
                <div class="alert text-center col-md-10 m-0 p-2" role="alert" id="alertMessage"></div>
                <div class="col-md-2 text-right">
                    <button type="button" class="btn btn-dark rounded-pill btn_delete" id="delete">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>
<div class="row form_row">
    <div class="col-md-3 p-0">
        <div class="py-3 bg-dark text-light text-center rounded" id="form_title">
            შეავსეთ ყველა მოცემული ველი
        </div>

        <form id="save_form" class="pt-3 mainForm">
            <input type="text" id="productID" hidden>

            <div  class="form-group">
                <input type="text" id="productName" class="form-control form_input rounded-pill" placeholder="პროდუქტის სახელი">
                <small id="productNameMessages" style="color: red !important" class="form-text text-muted text-danger pl-3"></small>
            </div>

            <div class="form-group mt-4">
                <input type="text" id="description" class="form-control form_input rounded-pill" placeholder="აღწერა">
                <small id="descriptionMessages" style="color: red !important" class="form-text text-muted text-danger pl-3"></small>
            </div>

            <div class="form-group mt-4">
                <div class="status-addon">
                    @*<Select id="status" class="form-control form_input status_selector rounded-pill">
                        <option value="0">სტატუსი</option>
                        <option value="1">დასადასტურებელი</option>
                        <option value="2">დადასტურებული</option>
                        <option value="3">გადამისამართებული</option>
                    </Select>*@

                    @Html.DropDownList("Status", new SelectList(Model.Item2, "Value", "Text"),
                        new { @class = "form-control form_input status_selector rounded-pill" })
                </div>
                <small id="statusMessages" style="color: red !important" class="form-text text-muted text-danger pl-3"></small>
            </div>

            <div class="form-inline mt-4">
                <input type="text" id="price" class="form-control form_input rounded-pill " placeholder="ფასი" size="20">
                <div class="currency-addon">
                    @*<select id="currency" class="form-control form_input currency-selector rounded-pill">
                <option data-symbol="₾" selected>GEL</option>
                <option data-symbol="$">USD</option>
                <option >EUR</option>
            </select>*@

                    @Html.DropDownList("Currency", new SelectList(Model.Item1, "Value", "Text"),
                        new { @class = "form-control form_input currency-selector rounded-pill" })
                </div>
                <small id="priceMessages" style="color: red !important" class="form-text text-muted text-danger pl-3"></small>
                <small id="currMessages" style="color: red !important" class="form-text text-muted text-danger pl-3"></small>
            </div>

            <div class="form-group text-center mt-3">
                <button type="button" class="btn btn-dark rounded-pill btn_clear" id="clear">Clear</button>
                <button type="submit" class="btn btn-dark rounded-pill btn_save" id="save">Save</button>
            </div>


        </form>
    </div>

    <div class="col-md-1 vertical">
        <div class="vertical_line"></div>
    </div>

    <div class="col-md p-0">
        <table id="productTbl" class="table rounded-pill">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">სახელი</th>
                    <th scope="col">აღწერა</th>
                    <th scope="col">სტატუსი</th>
                    <th scope="col">ფასი</th>
                    
                </tr>
            </thead>

            <tbody>
               
            </tbody>
        </table>
    </div>
</div>


